<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">
        <!--Title-->
        <TextView
            android:id="@+id/parent_item_title"
            tools:text="Popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="12sp"
            android:textSize="18sp"
            />
        <View
            android:id="@+id/div_1"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#d2d2d2"
            app:layout_constraintTop_toBottomOf="@id/parent_item_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"/>
        <!--Child RecyclerView-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/child_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/div_1"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/div_2"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#d2d2d2"
            app:layout_constraintTop_toBottomOf="@id/child_recyclerview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tvParentItemBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:padding="10dp"
            android:textColor="#000080"
            android:paddingStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/div_2"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>